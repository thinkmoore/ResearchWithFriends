      <Pane prefHeight="200.0" prefWidth="200.0" fx:id="imagepane">
          <ImageView fx:id="camview" fitWidth="640"  fitHeight="480.0" pickOnBounds="true" preserveRatio="true" />
          <Polygon id="selection" fx:id="bounds" fill="TRANSPARENT" layoutX="0.0" layoutY="0.0" stroke="BLACK"
                   strokeType="INSIDE">
              <points>
                  <Double fx:value="0"/>
                  <Double fx:value="0"/>
                  <Double fx:value="640"/>
                  <Double fx:value="0"/>
                  <Double fx:value="640"/>
                  <Double fx:value="480"/>
